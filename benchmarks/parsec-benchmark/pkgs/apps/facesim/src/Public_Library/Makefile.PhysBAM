ifndef AR
	AR = ar
endif
ifeq ($(PHYSBAM_CC),icc)
    LINK_FLAGS += -Kc++ $(PTHREAD_LINK_FLAGS)
    CC_FLAGS += -D__thread=___thread
else
    LINK_FLAGS += $(PTHREAD_LINK_FLAGS)
endif
##############################################################################
# Default flags
##############################################################################

# Warning flags
