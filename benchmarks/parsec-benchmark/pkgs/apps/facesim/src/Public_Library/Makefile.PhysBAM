ifeq ($(findstring icc,$(PHYSBAM_CC)),)
    WARNING_FLAGS = -w
else
    WARNING_FLAGS = -w
endif
endif
CC_FLAGS += $(WARNING_FLAGS)

# gcc with icc settings
